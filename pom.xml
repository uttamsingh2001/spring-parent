	<properties>
		<spring-boot-release.version>2.6.3</spring-boot-release.version>
		<jasypt-spring-boot-starter.version>3.0.3</jasypt-spring-boot-starter.version>
		<commons-collections4.version>4.4</commons-collections4.version>
		<commons-beanutils.version>1.9.4</commons-beanutils.version>
		<commons-io.version>2.8.0</commons-io.version>
		<lombok.version>1.18.20</lombok.version>
		<mapstruct.version>1.4.2.Final</mapstruct.version>
		<spring-openapi.version>1.6.4</spring-openapi.version>
		<maven-compiler-plugin.version>3.8.1</maven-compiler-plugin.version>
		<maven-dependency-plugin.version>3.1.2</maven-dependency-plugin.version>
		<jacoco.version>0.8.3</jacoco.version>
		<sonar.java.coveragePlugin>jacoco</sonar.java.coveragePlugin>
		<sonar.dynamicAnalysis>reuseReports</sonar.dynamicAnalysis>
		<sonar.jacoco.reportPath>${project.basedir}/../target/jacoco.exec</sonar.jacoco.reportPath>
		<sonar.language>java</sonar.language>
		<!--This overrides Spring's default 1.8 version -->
		<java.version>11</java.version>
		<!--Since Java 9 to specify java source and target, use release tag -->
		<maven.compiler.release>11</maven.compiler.release>
		<cyclonedx-maven-plugin.version>2.5.1</cyclonedx-maven-plugin.version>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
		<!-- Log4j CVE-2021-44228 and CVE-2021-45046 fix. DO NOT REMOVE following line until spring-boot-starter-parent has newer version then the one listed here -->
		<log4j2.version>2.16.0</log4j2.version>
	</properties>

	<profiles>
		<profile>
			<id>sonar</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<!-- Optional URL to server. Default value is http://localhost:9000 -->
				<sonar.host.url>https://sonarqube.nextgen.com/</sonar.host.url>
			</properties>
		</profile>
	</profiles>

