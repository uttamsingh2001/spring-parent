	<name>Crossayst SpringBoot Parent</name>
	<description>Parent POM for SpringBoot Applications.</description>
	<url />

	<developers>
		<developer>
			<organization>Crossasyst</organization>
			<url>https://www.crossasyst.com/</url>
		</developer>
